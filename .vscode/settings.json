{
  "[html]": {
    "editor.formatOnSave": false
  },
  "files.exclude": {
    "**/.git": true,
    "**/_site": true,
    "**/node_modules": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**_site": true
  },
  "cSpell.language": "en,es",
  "cSpell.words": [
    "Alexa",
    "alsw",
    "Apóyanos",
    "arduino",
    "Chepe",
    "Domótica",
    "dotfile",
    "EEPROM",
    "esp",
    "esp32",
    "esp8266",
    "Flujograma",
    "ingjuan",
    "jekyll",
    "mdns",
    "mosquitto",
    "mqtt",
    "paty",
    "Programacion",
    "Tiktok",
    "updrade",
    "versionamiento",
    "versionar"
  ],
  "python.linting.pylintArgs": [
    "--variable-naming=camelCase",
    "--module-naming-style=camelCase",
    "--const-naming-style=camelCase",
    "--class-naming-style=PascalCase",
    "--function-naming-style=camelCase",
    "--attr-naming-style=camelCase",
    "--argument-naming-style=camelCase",
    "--variable-naming-style=camelCase",
    "--class-attribute-naming-style=camelCase",
    "--inlinevar-naming-style=camelCase"
  ],
  // https://code.visualstudio.com/api/references/theme-color
  "workbench.colorCustomizations": {
    // Color Oscuro
    "activityBar.background": "#3d0e61",
    "tab.inactiveBackground": "#3d0e61",
    "statusBar.background": "#3d0e61",
    "breadcrumb.background": "#3d0e61",
    "editorGroupHeader.tabsBackground": "#3d0e61",
    // Color Claro
    "activityBar.activeBackground": "#57148a",
    "tab.activeBackground": "#57148a",
    // Color Mas Oscuro
    "minimap.background": "#160522",
    "sideBar.background": "#160522",
  }
}
